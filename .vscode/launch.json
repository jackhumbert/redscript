    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'redscript-cli'",
            "presentation": {
                "hidden": false,
                "group": "build",
                "order": 1,
                "clear": true,
                "reuse": true
            },
            "cargo": {
                "args": [
                    "build",
                    "--bin=redscript-cli",
                    "--package=redscript-cli"
                ],
                "filter": {
                    "name": "redscript-cli",
                    "kind": "bin"
                }
            }, 
            "args": [
                "decompile",
                "-i",
                "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Cyberpunk 2077\\tools\\redmod\\final_profile.redscripts",
                "-o",
                "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Cyberpunk 2077\\tools\\redmod\\redscripts",
                "-m",
                "code",
                "-f"
            ],
            "cwd": "${workspaceFolder}",
            // "console": "internalConsole",
        },
    ]
}